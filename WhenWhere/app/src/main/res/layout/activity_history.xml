<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="hku.cs.myrecyclerview.MainActivity">

        <ImageView
            android:id="@+id/spotImage"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/downloadOnline" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/spotImage"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text="birthday party" />


        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/location"
            android:layout_below="@id/location"
            android:textSize="14sp"
            tools:text="pokfulam road, hku" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/location"
            android:layout_below="@id/tvAddress"
            android:textColor="#0000ff"
            android:textSize="14sp"
            tools:text="2019.04.01 13:00-14:00" />

        <Button
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/time"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            tools:text="more" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

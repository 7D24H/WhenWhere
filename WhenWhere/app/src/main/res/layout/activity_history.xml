<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context="hku.cs.myrecyclerview.MainActivity">


        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="@string/act_list_name"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/get_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:textSize="16sp"
            android:textColor="#0000ff"
            tools:text="birthday party"
            android:layout_marginStart="70dp" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/Name"
            android:layout_below="@id/Name"
            android:textSize="16sp"
            android:text="@string/place"
            android:layout_alignStart="@id/Name" />
        <TextView
            android:id="@+id/get_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/get_name"
            android:layout_below="@id/get_name"
            android:textSize="16sp"
            android:textColor="#0000ff"
            tools:text="pokfulam road, hku"
            android:layout_alignStart="@id/get_name" />
        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/Name"
            android:layout_below="@id/place"
            android:textSize="16sp"
            android:text="@string/Time"
            android:layout_alignStart="@id/Name" />

        <TextView
            android:id="@+id/get_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/get_name"
            android:layout_below="@id/get_place"
            android:textColor="#0000ff"
            android:textSize="14sp"
            tools:text="2019.04.01 13:00-14:00"
            android:layout_alignStart="@id/get_name" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
